{
  "compilerOptions": {
    "target": "es2020",
    "lib": [
      "es2020"
    ],
    "moduleResolution": "node",
    "module": "CommonJS",
    "strict": true,
    "declaration": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    /* Additional Checks */
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    /* Debugging Options */
    "traceResolution": false,
    "listEmittedFiles": false,
    "listFiles": false,
    "pretty": false,
    "removeComments": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "skipLibCheck": true,
    "allowJs": true,                       // allow build javascript files
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "exclude": [
    "**/node_modules"
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
    "src/**/*.json"
  ],
}

